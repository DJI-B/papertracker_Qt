}

QMainWindow#MainPage QLineEdit#WiFiNameEdit:focus,
QMainWindow#MainPage QLineEdit#WiFiPasswordEdit:focus {
    border-color: #0070f9;
    outline: none;
}

/* WiFi 复选框样式 */
QMainWindow#MainPage QCheckBox#ShowPasswordCheckBox {
    font-size: 13px;  /* 从12px增加到13px */
    color: #666;
}

QMainWindow#MainPage QCheckBox#ShowPasswordCheckBox::indicator {
