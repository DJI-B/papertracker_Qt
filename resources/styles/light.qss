* {
    outline: none;
}

/* 基础样式 */
QWidget {
    background-color: #ffffff;
}

QMainWindow {
    background-color: #ffffff;
}

QMainWindow#MainPage {
    border-radius: 12px;
}

/* 中央窗口部件 */
QMainWindow#MainPage QWidget#centralWidget {
    background-color: #ffffff;
    border-radius: 12px;
}

QMainWindow#MainPage QFrame#centralWidget {
    background-color: #ffffff;
    border-radius: 12px;
}

/* 侧边栏样式 */
QMainWindow#MainPage QWidget#sidebarWidget {
    background-color: #f0f0f0;
    border-top-left-radius: 12px;
    border-bottom-left-radius: 12px;
}

/* 标题栏样式 */
QMainWindow#MainPage QWidget#titleBarWidget {
    background-color: #f0f0f0;
    border: none;
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
}

QMainWindow#MainPage QWidget#titleLeftArea {
    background-color: #f0f0f0;
    border-top-left-radius: 12px;
}

QMainWindow#MainPage QWidget#titleRightArea {
    background-color: white;
    border-top-right-radius: 12px;
}

QMainWindow#MainPage QLabel#titleLabel {
    background-color: #f0f0f0;
    font-size: 16px;
    font-weight: bold;
    color: #333333;
}

/* 侧边栏项样式 */
QMainWindow#MainPage QWidget#SiderBarItem {
    background-color: #f0f0f0;
}

QMainWindow#MainPage QLabel#sidebarIconLabel {
    background-color: #f0f0f0;
}

QMainWindow#MainPage QLabel#sidebarTextLabel {
    font-size: 14px;
    font-weight: 500;
    color: #333333;
    background-color: #f0f0f0;
}

/* 标题栏按钮样式 */
QMainWindow#MainPage QPushButton {
    border: none;
    background-color: transparent;
}

QMainWindow#MainPage QPushButton:hover {
    background-color: #e0e0e0;
}

QMainWindow#MainPage QPushButton#closeButton:hover {
    background-color: #ff5555;
}

/* 内容堆栈 */
QMainWindow#MainPage QStackedWidget#contentStack {
    background-color: white;
    border-bottom-right-radius: 12px;
}

/* 下拉菜单样式 */
QWidget#DropdownMenu {
    background-color: white;
    border-radius: 8px;
}

QWidget#MenuItem {
    background-color: transparent;
    padding: 10px 20px;
}

QWidget#MenuItem:hover {
    background-color: #f0f0f0;
}

QLabel#MenuItemText {
    color: #333333;
    font-size: 14px;
    font-weight: 400;
}

/* USB状态区域样式 */
QMainWindow#MainPage QWidget#USBStatusWidget {
    background-color: #f0f0f0;
}

QMainWindow#MainPage QLabel#USBSectionTitle {
    background-color: #f0f0f0;
    font-size: 13px;
    font-weight: bold;
    color: #333;
    margin: 0;
}

QMainWindow#MainPage QLabel#USBStatusLabel {
    background-color: #f0f0f0;
    font-size: 12px;
    color: #666;
    margin: 0;
}

/* 设备列表区域样式 */
QMainWindow#MainPage QWidget#DeviceListWidget {
    background-color: #f0f0f0;
}

QMainWindow#MainPage QLabel#DeviceSectionTitle {
    background-color: #f0f0f0;
    font-size: 13px;
    font-weight: bold;
    color: #333;
    margin: 0;
}

QMainWindow#MainPage QLabel#DeviceCount {
    background-color: #f0f0f0;
    font-size: 11px;
    color: #666;
    margin: 0;
}

/* 已连接设备列表样式 - 添加内边距以显示圆角 */
QMainWindow#MainPage QListWidget#ConnectedDevicesList {
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    background-color: white;
    font-size: 11px;
    outline: none;
    padding: 4px;  /* 添加内边距，让圆角效果更明显 */
}

QMainWindow#MainPage QListWidget#ConnectedDevicesList::item {
    padding: 8px 10px;
    border-bottom: 1px solid #f5f5f5;
    min-height: 16px;
    background-color: white;
    border-radius: 4px;  /* 给列表项也添加小圆角 */
    margin: 1px 0;  /* 添加小的垂直边距 */
}

QMainWindow#MainPage QListWidget#ConnectedDevicesList::item:hover {
    background-color: #f8f9ff;
}

QMainWindow#MainPage QListWidget#ConnectedDevicesList::item:selected {
    background-color: #e7ebf0;
    color: #0070f9;
}

QMainWindow#MainPage QListWidget#ConnectedDevicesList::item:last {
    border-bottom: none;  /* 移除最后一项的底部边框 */
}

/* 如果希望第一个和最后一个项目有特殊的圆角处理 */
QMainWindow#MainPage QListWidget#ConnectedDevicesList::item:first {
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

QMainWindow#MainPage QListWidget#ConnectedDevicesList::item:last {
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    border-bottom: none;
}

/* 设备项内容样式 */
QMainWindow#MainPage QWidget#DeviceItem {
    background-color: transparent;
}

QMainWindow#MainPage QLabel#DeviceNameLabel {
    font-size: 11px;
    font-weight: bold;
    color: #333;
    margin: 0;
    background-color: transparent;  /* 改为透明 */
}

/* 分隔线样式 */
QMainWindow#MainPage QFrame#SidebarSeparator {
    color: #e0e0e0;
    background-color: #e0e0e0;
    margin: 12px 20px;
}

/* Guide Widget 样式 */
QMainWindow#MainPage QLabel#GuideTitle {
    font-size: 20px;
    font-weight: bold;
    color: #333;
    margin: 5px 0;
    background-color: transparent;
}

QMainWindow#MainPage QPushButton#GuidePrevButton {
    background-color: #f0f0f0;
    border: 1px solid #ddd;
    border-radius: 6px;
    padding: 8px 16px;
    font-size: 13px;
    font-weight: 500;
    color: #333;
}

QMainWindow#MainPage QPushButton#GuidePrevButton:hover {
    background-color: #e0e0e0;
}

QMainWindow#MainPage QPushButton#GuidePrevButton:disabled {
    background-color: #f8f8f8;
    color: #999;
}

QMainWindow#MainPage QPushButton#GuideNextButton {
    background-color: #0070f9;
    border: none;
    border-radius: 6px;
    padding: 8px 16px;
    font-size: 13px;
    color: white;
    font-weight: bold;
}

QMainWindow#MainPage QPushButton#GuideNextButton:hover {
    background-color: #005acc;
}

/* WiFi 设置页面滚动区域样式 */
QMainWindow#MainPage QScrollArea#WiFiScrollArea {
    background-color: transparent;
    border: none;
}

/* 公共滚动条样式 - 简洁统一 */
QScrollBar:vertical {
    background-color: #f5f5f5;
    width: 10px;
    border: none;
    border-radius: 5px;
}

QScrollBar::handle:vertical {
    background-color: #d0d0d0;
    border-radius: 5px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #a0a0a0;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
    border: none;
}

QScrollBar:horizontal {
    background-color: #f5f5f5;
    height: 10px;
    border: none;
    border-radius: 5px;
}

QScrollBar::handle:horizontal {
    background-color: #d0d0d0;
    border-radius: 5px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #a0a0a0;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px;
    border: none;
}

/* 垂直滚动条 */
QScrollBar:vertical {
    border: none;
    background: transparent;
    width: 10px;
    border-radius: 5px;
}

QScrollBar::handle:vertical {
    background: rgba(0, 0, 0, 0.3);
    border-radius: 5px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background: rgba(0, 0, 0, 0.5);
}

QScrollBar::handle:vertical:pressed {
    background: rgba(0, 0, 0, 0.7);
}

/* 隐藏滚动条箭头 */
QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    border: none;
    background: none;
    height: 0;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: transparent;
}

/* 水平滚动条 */
QScrollBar:horizontal {
    border: none;
    background: transparent;
    height: 10px;
    border-radius: 5px;
}

QScrollBar::handle:horizontal {
    background: rgba(0, 0, 0, 0.3);
    border-radius: 5px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background: rgba(0, 0, 0, 0.5);
}

QScrollBar::handle:horizontal:pressed {
    background: rgba(0, 0, 0, 0.7);
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    border: none;
    background: none;
    width: 0;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: transparent;
}

/* 滚动条角落 */
QScrollBar::corner {
    background: transparent;
}

/* WiFi 页面标题和描述 */
QMainWindow#MainPage QLabel#WiFiSetupTitle {
    font-size: 22px;  /* 从18px增加到22px */
    font-weight: bold;
    color: #333;
    margin: 0;
    background-color: transparent;
}

QMainWindow#MainPage QLabel#WiFiSetupDesc {
    font-size: 15px;  /* 从13px增加到15px */
    color: #666;
    line-height: 1.4;  /* 增加行高以适应更大字体 */
    margin: 0;
    background-color: transparent;
}

/* WiFi GroupBox 样式 */
QMainWindow#MainPage QGroupBox {
    font-size: 14px;  /* 从13px增加到14px */
    font-weight: bold;
    color: #333;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    margin-top: 8px;
    padding-top: 8px;
    background-color: white;
}

QMainWindow#MainPage QGroupBox::title {
    left: 10px;
    padding: 0 6px 0 6px;
